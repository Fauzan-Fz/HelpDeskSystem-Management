<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelpDeskSystem</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Footer.css" />
    <link rel="stylesheet" href="~/css/Layout.css" />

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/assets/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/assets/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/assets/dist/css/adminlte.min.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="~/assets/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
    <!-- Bootstrap Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- HighChart Style -->
    <link rel="stylesheet" href="~/css/HighCharts.css">

    @RenderSection("styles", required: false)
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                    </li>
                }
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link bi bi-house"> Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="nav-link bi bi-clipboard-minus"> Privacy</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <partial name="_LoginPartial" />
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        @if (User.Identity.IsAuthenticated)
        {
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="brand-link d-flex justify-content-center align-items-center w-100 position-relative py-3">
                    <i class="fas fa-cubes collapsed-icon" style="color:orangered"></i>
                    <span class="brand-text font-weight-light">HelpDesk System</span>
                </a>

                <div class="sidebar">
                    <br />
                    <!-- SidebarSearch Form -->
                    <div class="form-inline">
                        <div class="input-group" data-widget="sidebar-search">
                            <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                            <div class="input-group-append">
                                <button class="btn btn-sidebar">
                                    <i class="fas fa-search fa-fw"></i>
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-speedometer2"></i>
                                    <p>
                                        Dashboard
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Users" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-people"></i>
                                    <p>
                                        Users
                                    </p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon bi bi-ticket-perforated"></i>
                                    <p>
                                        Ticket
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-area="" asp-controller="Tickets" asp-action="Index" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Recent Ticket</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Tickets" asp-action="AssignedTickets" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Assigned Ticket</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Tickets" asp-action="ResolvedTickets" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Resolved Ticket</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-controller="Tickets" asp-action="ClosedTickets" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Closed Ticket</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Comments" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-chat-left-text"></i>
                                    <p>
                                        Comments
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="AuditTrails" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-activity"></i>
                                    <p>
                                        Audit Trails
                                        <span class="right badge badge-danger">New</span>
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="TicketCategories" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-basket-fill"></i>
                                    <p>
                                        Ticket Categories
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="TicketSubCategories" asp-action="SubCategories" class="nav-link">
                                    <i class="nav-icon bi bi-substack"></i>
                                    <p>
                                        Ticket Sub-Categories
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="SystemCodes" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-box-seam"></i>
                                    <p>
                                        System Codes
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="SystemCodeDetails" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-folder2-open"></i>
                                    <p>
                                        System Codes Details
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Roles" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-person-badge"></i>
                                    <p>
                                        System Roles
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Departments" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-briefcase"></i>
                                    <p>
                                        Departments
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="SystemTasks" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-list-task"></i>
                                    <p>
                                        System-Task
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="SystemSettings" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-gear"></i>
                                    <p>
                                        System-Setting
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="UserRoleProfiles" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-person-square"></i>
                                    <p>
                                        User-Role Profile
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Countries" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-flag"></i>
                                    <p>
                                        Country
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="Cities" asp-action="Index" class="nav-link">
                                    <i class="nav-icon bi bi-building"></i>
                                    <p>
                                        City
                                    </p>
                                </a>
                            </li>
                        </ul>
                        <div style="height: 100vh; opacity: 0;"></div>
                    </nav>
                </div>
            </aside>
        }

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <main class="page-content">
                                <div class="container">
                                    <main role="main" class="pb-3">
                                        @RenderBody()
                                    </main>
                                </div>
                            </main>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
                <b>Version</b> 1.0
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year <a>Help System Management</a>.</strong> All rights reserved.
        </footer>

        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control Sidebar -->
        </aside>
    </div>
    <!-- ./wrapper -->
    @section scripts {
        <script src="~/assets/plugins/jquery/jquery.min.js"></script>
        <script src="~/assets/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
        <script src="~/assets/dist/js/adminlte.min.js"></script>
        <script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/assets/dist/js/demo.js"></script>

        <script type="text/javascript">
            $(function () {
                // Inisialisasi paksa OverlayScrollbars
                const sidebar = $('.sidebar');
                sidebar.overlayScrollbars({
                    overflowBehavior: {
                        x: 'hidden',
                        y: 'scroll'
                    },
                    callbacks: {
                        onInitialized: function () {
                            // Paksa update scrollbar
                            this.scroll().update();
                        }
                    }
                });

                // Update saat dropdown dibuka
                $('[data-widget="treeview"]').on('expanded.treeview', function () {
                    sidebar.overlayScrollbars().update();
                });
            });
        </script>

        <!-- HighChart Script -->
        <script src="https://code.highcharts.com/highcharts.js"></script>
        <script src="https://code.highcharts.com/modules/non-cartesian-zoom.js"></script>
        <script src="https://code.highcharts.com/modules/exporting.js"></script>
        <script src="https://code.highcharts.com/modules/accessibility.js"></script>
        <script src="https://code.highcharts.com/modules/series-label.js"></script>
        <script src="https://code.highcharts.com/modules/export-data.js"></script>

        @await Component.InvokeAsync("NToastNotify")
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>